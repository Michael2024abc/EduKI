<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<BorderPane prefHeight="600.0" prefWidth="700.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.gc.agent.erm.view.TutorDialogController">
   <center>
      <ListView fx:id="chatListView" style="-fx-background-color: #f4f4f4;" />
   </center>
   <bottom>
      <VBox spacing="10.0">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
         <children>
            <Label text="Stellen Sie eine Frage oder wählen Sie einen Vorschlag:" />
            <ScrollPane fitToWidth="true" hbarPolicy="NEVER" prefHeight="180.0" vbarPolicy="AS_NEEDED">
               <content>
                  <VBox fx:id="suggestionsBox" spacing="5.0" />
               </content>
            </ScrollPane>
            <HBox spacing="10.0">
               <children>
                  <TextField fx:id="inputTextField" HBox.hgrow="ALWAYS" onAction="#onSendMessage" promptText="Ihre Frage..." />
                  <Button fx:id="sendButton" mnemonicParsing="false" onAction="#onSendMessage" text="Senden">
                     <tooltip>
                        <Tooltip text="Nachricht senden (Alternativ: Strg+Enter)" />
                     </tooltip>
                  </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </bottom>
   <top>
      <HBox alignment="CENTER_LEFT" spacing="10.0">
         <children>
            <Label fx:id="titleLabel" style="-fx-font-size: 1.5em;" text="Titel des Dialogs" />
            <Pane HBox.hgrow="ALWAYS" />
            <Button onAction="#onDecreaseFontSize" style="-fx-font-size: 0.8em; -fx-padding: 2 6 2 6;" text="A-">
               <tooltip>
                  <Tooltip text="Schriftgröße verkleinern" />
               </tooltip>
            </Button>
            <Button onAction="#onIncreaseFontSize" style="-fx-font-size: 1.2em; -fx-padding: 2 6 2 6;" text="A+">
               <tooltip>
                  <Tooltip text="Schriftgröße vergrößern" />
               </tooltip>
            </Button>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>
</BorderPane>